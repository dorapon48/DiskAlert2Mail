# 全体
[config]
# ディスク使用率通知の下限
diskUsageMaxLimit = 80

# メールの送り先
toAddress = ""
# メールの送り主
fromAddress = ""

# smtpサーバーのアドレス
smtpAddress = ""
# smtpサーバーのポート
smtpPort = 587
# smtpサーバーのユーザー
smtpUser = ""
# smtpサーバーのパスワード
smtpPassword = ""


# 動作間隔(hour)
executionCycle = 24

# 各種設定
[[disks]]
# diskの表示名(書かれてなければdisk1から)
diskName = "test disk"
# dfで表示される一番右の部分
mountPath="/path/to/disk"
# ディスク使用率通知の下限(こちらが優先)
#diskUsageMaxLimit = 50

[[disks]]
diskName = "test disk"
mountPath="/path/to/disk"
diskUsageMaxLimit= 10